<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/as3">

    <!--    adding logo for app-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_marginTop="30dp"
        android:layout_margin="20dp"
        android:contentDescription="image"
        app:srcCompat="@drawable/todogif" />


    <!--    text message for user-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="Please signup as new user"
            android:textColor="#090909"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!--    input fields for username and password -->
        <EditText
            android:id="@+id/edittext_username"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/login_small"
            android:hint="@string/username"
            android:textColor="#090909"
            android:textColorHint="#090909" />


        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="244dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password_small"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="#090909"
            android:textColorHint="#090909" />

        <!--    another input for password-->
        <EditText
            android:id="@+id/edittext_cnf_password"
            android:layout_width="244dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password_small"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColor="#090909"
            android:textColorHint="#090909" />

        <!--    login button-->
        <Button
            android:id="@+id/button_register"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_gradient"
            android:text="sign up"
            android:textColor="#fff"
            android:textSize="20dp" />


        <!--    another linear layout for registration link-->
        <Button
            android:id="@+id/textview_login"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_gradient"
            android:text="back"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Copyright &#169; Ravi Gopali 2020"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic" />

</LinearLayout>